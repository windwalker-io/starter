{
    "name": "windwalker/starter",
    "description": "Windwalker Starter.",
    "homepage": "https://github.com/windwalker-io/starter",
    "license": "MIT",
    "minimum-stability": "beta",
    "authors": [
        {
            "name": "Simon Asika",
            "email": "asika32764@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4.6",
        "ext-json": "*",
        "windwalker/core": "^4.0",
        "windwalker/renderer": "^4.0",
        "windwalker/dom": "^4.0",
        "windwalker/edge": "^4.0",
        "asika/cross-env": "^2.0"
    },
    "require-dev": {
    },
    "scripts": {
        "post-create-project-cmd": [
            "Windwalker\\Core\\Composer\\StarterInstaller::rootInstall",
            "php windwalker run prepare"
        ],
        "post-package-update": [
            "Windwalker\\Core\\Composer\\PackageUpgrader::upgrade"
        ],
        "post-autoload-dump": [
            "@php windwalker pkg:postinstall || true",
            "php windwalker cache:clear renderer"
        ],
        "env": [
            "Windwalker\\Core\\Composer\\StarterInstaller::genEnv",
            "@php windwalker cache:clear renderer",
            "@php windwalker run prepare"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "config": {
        "platform": {
            "php": "8.4.6"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev"
        }
    }
}
